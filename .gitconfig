[user]
  name = jaspersanchez
  email = 48467051+jaspersanchez@users.noreply.github.com

[init]
  defaultBranch = main

[color]
  ui = auto

[core]
  excludesfile = /Users/jaspersanchez/.gitignore_global
  editor = nvim
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true    # use n and N to move between diff sections
  side-by-side = true

  # delta detects terminal colors automatically; set one of these to disable auto-detection
  # dark = true
  # light = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
